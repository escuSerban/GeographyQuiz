<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="colorAccent">#E040FB</item>
    </style>

    <style name="introQuestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#800080</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DidYouKnow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#BC8F8F</item>
    </style>

    <style name="Save">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#808000</item>
        <item name="android:text">Save</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="checkBoxes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmallPopupMenu</item>
    </style>

    <style name="QuestionsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#800000</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="gradeSubmit">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="SubmitQuiz">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">Submit Quiz</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#6B8E23</item>
    </style>

    <style name="restart">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#800080</item>
        <item name="android:background">#A0522D</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
